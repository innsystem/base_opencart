{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-order-status" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-order-status" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ entry_name }}</label>
            <div class="col-sm-10">
              {% for language in languages %}
              <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                <input type="text" name="order_status[{{ language.language_id }}][name]" value="{{ order_status[language.language_id] ? order_status[language.language_id].name }}" placeholder="{{ entry_name }}" class="form-control" />
              </div>
              {% if error_name[language.language_id] %}
              <div class="text-danger">{{ error_name[language.language_id] }}</div>
              {% endif %}
              {% endfor %}
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_color_type }}</label>
            <div class="col-sm-10">

              <div class="checkbox">
                <label>
                  <input type="radio" name="color_type" value="badge-success" {% if color_type == 'badge-success' %} checked="checked" {% endif %} /> <span class="badge badge-success">Sucesso</span>
                </label>
                
                <label>
                  <input type="radio" name="color_type" value="badge-danger" {% if color_type == 'badge-danger' %} checked="checked" {% endif %} /> <span class="badge badge-danger">Falha</span>
                </label>

                <label>
                  <input type="radio" name="color_type" value="badge-warning" {% if color_type == 'badge-warning' %} checked="checked" {% endif %} /> <span class="badge badge-warning">Aviso</span>
                </label>

                <label>
                  <input type="radio" name="color_type" value="badge-info" {% if color_type == 'badge-info' %} checked="checked" {% endif %} /> <span class="badge badge-info">Informação</span>
                </label>

                <label>
                  <input type="radio" name="color_type" value="badge-primary" {% if color_type == 'badge-primary' %} checked="checked" {% endif %} /> <span class="badge badge-primary">Primário</span>
                </label>

                <label>
                  <input type="radio" name="color_type" value="badge-secondary" {% if color_type == 'badge-secondary' %} checked="checked" {% endif %} /> <span class="badge badge-secondary">Secundário</span>
                </label>
              </div>

            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
