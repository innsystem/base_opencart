{% if reviews %}
<div class="boxReviewsClients">
  <div class="heading-page border-bottom pb-1 mb-3">
    <h3 class="title">Avaliações do Produto ({{review_total}}) </h3>
  </div>
  <div class="row my-5">
    {% for review in reviews %}
    <div class="col-12 col-12 col-sm-12 col-md-6 col-md-6 col-lg-3 mb-4">

      <div class="conteudo">
        <div class="avatar"><img src="_galerias/avatares/{{ review.avatar }}.png" alt="{{ review.author }}"></div>

        <div class="rating">
          {% for i in 1..5 %}
          {% if review.rating < i %} <i class="far fa-star"></i>
            {% else %}
            <i class="fas fa-star"></i>
            {% endif %}
            {% endfor %}
        </div>

        <h2>{{ review.author }}</h2>
        <p>{{ review.text }}</p>

        <span class="date">{{ review.date_added }}</span>
      </div>
    </div>
    {% endfor %}
  </div>
  <div class="d-flex justify-content-between align-items-center">
    <div class="text-left">{{ pagination }}</div>
    <div class="text-right">{{ results }}</div>
  </div>
  {% endif %}